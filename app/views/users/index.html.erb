<h1><%= controller.action_name=="new_users" ? "New Users" : "Users" %></h1><br>

<p id="notice"><%= notice %></p>
<p style="color:red"><%= alert %></p>

<table class="table table-sm table-striped table-bordered" style="width:50%">
  <thead>
    <tr>
      <th class="text-center">Name</th>
      <th class="text-center">Surname</th>
      <th class="text-center">Email</th>
      <th class="text-center">Role</th>
      <th class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="text-center">
        <td><%= user.name %></td>
        <td><%= user.surname %></td>
        <td><%= user.email %></td>
        <td><%= user.role.capitalize %></td>
        <td>
          <%= link_to 'Show', user %>
          <%= link_to 'Edit', edit_user_path(user) %>
          <%= user.email != current_user.email ? link_to('Delete', user, method: :delete, data: { confirm: 'Are you sure?' }) : "(me)" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @users.empty? %>
  <h3>No users were found</h3>
<% end %>

<br>

<%= paginate @users %>

<%= button_to 'Create User', new_user_path, button_options %>
<%= button_to 'New Users', new_users_path, button_options %>