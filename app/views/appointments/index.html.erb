<p id="notice"><%= notice %></p>
<p style="color:red"><%= alert %></p>

<h1>Appointments</h1><br>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="text-center">Patient name</th>
      <th class="text-center">Patient surname</th>
      <th class="text-center">Date time</th>
      <th class="text-center">Professional</th>
      <th class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.name %></td>
        <td><%= appointment.surname %></td>
        <td><%= appointment.date_time_string %></td>
        <td><%= link_to appointment.professional.name, appointment.professional %></td>
        <td>
          <%= link_to 'Show', appointment %>
          <%= link_to 'Edit', edit_appointment_path(appointment) %>
          <% if not appointment.finished? %>
            <%= link_to 'Cancel', appointment, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if not @professional %>
  <%= link_to 'New Appointment', new_appointment_path %>
<% else %>
  <%= link_to 'New Appointment', new_professional_appointment_path %>
<% end %>
